<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/duowalk_background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- שורה 1 -->
        <LinearLayout
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btn_settings"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/duowalk_button_bg"
                android:contentDescription="Settings"
                android:scaleType="centerInside"
                android:src="@drawable/settings" />

            <TextView
                style="@style/DuowalkHeading"
                android:id="@+id/tv_title"
                android:text="Duowalk"
                android:paddingHorizontal="49dp"
                android:textColor="@color/duowalk_text_dark" />

            <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/duowalk_button_bg"
                android:contentDescription="Profile"
                android:scaleType="centerInside"
                android:src="@drawable/profile" />
        </LinearLayout>

        <!-- שורה 2 -->
        <TextView
            style="@style/DuowalkHeading"
            android:layout_marginTop="24dp"
            android:text="Map (coming soon)"
            android:textColor="@color/duowalk_text_dark" />

        <LinearLayout
            android:layout_marginTop="400dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_leaderboard"
                android:layout_width="50dp"
                android:layout_marginBottom="5dp"

                android:layout_height="50dp"
                android:background="@drawable/duowalk_button_bg"
                android:contentDescription="Leaderboard"
                android:scaleType="centerInside"
                android:src="@drawable/leaderboard" />

            <ImageButton
                android:id="@+id/btn_steps"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/duowalk_button_bg"
                android:contentDescription="My Steps"
                android:layout_margin="20dp"
                android:scaleType="centerInside"
                android:src="@drawable/my_steps" />

            <ImageButton
                android:id="@+id/btn_friends"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/duowalk_button_bg"
                android:contentDescription="Add Friend"
                android:scaleType="centerInside"
                android:src="@drawable/add_friend" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
